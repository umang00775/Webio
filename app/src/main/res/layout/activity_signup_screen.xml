<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkthemebg"
    tools:context=".SignupScreen"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    Upper part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/appname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/limelight"
                android:textAlignment="center"
                android:padding="5dp"
                android:transitionName="transition1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="WELCOME"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="5dp"
                android:transitionName="transition2"/>
        </LinearLayout>

        <!--    Form    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/signupocontinue"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:transitionName="transition3"/>

            <!--            Full name       -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:transitionName="transition4"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--            Email       -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mail"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintTextColor="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:layout_marginVertical="15dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:transitionName="transition5"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--            Password        -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginVertical="5dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="1dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white"
                app:hintTextColor="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--            Sign up button      -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/signupbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sign Up"
                android:textSize="14sp"
                android:padding="5dp"
                android:backgroundTint="@color/primarycolor"
                android:textColor="@color/black"
                app:rippleColor="#121212"
                android:fontFamily="@font/poppins"
                app:strokeColor="@color/purple_200"
                app:cornerRadius="5dp"
                android:transitionName="transition6"/>
        </LinearLayout>

        <!--        Create new account      -->
        <TextView
            android:id="@+id/alreadyhaveanacc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="3dp"
            android:text="@string/alreadyhaveanacc"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:transitionName="transition7"/>

    </LinearLayout>
</ScrollView>